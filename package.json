{
  "name": "ocr-lab-report-backend",
  "version": "1.0.0",
  "description": "OCR Lab Report Web App - Backend API with Authentication and OCR Processing",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "nodemon backend/app.js",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "install-all": "npm install && npm run frontend:install",
    "dev-all": "concurrently \"npm run dev\" \"npm run frontend\"",
    "test": "echo \"See TESTING_GUIDE.md for testing instructions\" && exit 0",
    "lint": "eslint backend/**/*.js --fix",
    "lint:check": "eslint backend/**/*.js",
    "format": "prettier --write \"backend/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"backend/**/*.js\" \"*.js\"",
    "test:backend": "node backend/test-db.js"
  },
  "keywords": [
    "ocr",
    "lab-report",
    "healthcare",
    "tesseract",
    "postgresql",
    "express",
    "react",
    "neon"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/vision": "^4.3.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "pg": "^8.13.1",
    "sharp": "^0.34.4",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
